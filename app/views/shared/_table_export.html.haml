.control-group
  %div{id: "exportLink-#{id}"}
    %small
      %button.btn.btn-mini{style: "padding: 2px 6px; font-size 10.5px; border-radius: 3px; margin-bottom: 10px; color: #333333; background-color: #f5f5f5; background-image: linear-gradient(to bottom, #fff, #e6e6e6); border: 1px solid #cccccc; border-bottom-color: #b3b3b3; box-shadow: inset 0 1px 0 rgba(255,255,255,0.2), 0 1px 2px rgba(0,0,0,0.05)", onclick: "export_table('#{id}')"}
        %i(class="fa fa-download" aria-hidden="true")
          %span{style: "font-family: 'Helvetica Neue',Helvetica,Arial,sans-serif"}
            Download as TSV
  %div{id: "loadingBar-#{id}", style: 'display:none;'}
    .progress.progress-striped.active.span2
      .bar(style='width: 100%') Preparing Download

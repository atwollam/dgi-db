=content_for :title do
  =tx "title"
=content_for :header do
  %h2
    =tx "title_main"
    %small
      =tx "title_small"
      %strong
        %i.icon-flag.tip{title: tx("title_flag")}
      %a(href="/faq#inclusive")
        =icon('question-sign')

#container.container-fluid
  #source-list.well.span12{data: {sources: @sources.to_json}, style: "width: 940px; float: left; margin-left: 20px"}
    %label.checkbox.inline Limit categories to specific sources:
    -@sources.each do |source|
      %label.checkbox.inline{style: "margin-left: 10px; display: inline-block; padding-top: 5px; margin-bottom: 0px vertical-align: middle; margin-left: 10px; min-height: 20px; padding-left: 20px; font-size: 14px; font-weight: normal; line-height: 20px;"}
        %input{type: 'checkbox', value: source, data: {bind: 'checked: sources'}}
        =source

#container.container-fluid
  .category-listing{data: {bind: 'foreach: categories'}}
    .item.well.span3{style: "float:left;"}
      %a{data: {bind: "attr: { href: link }"}}
        %h4{data: {bind: 'text: text'}}
%p

=javascript_include_tag 'knockout-2.2.1'
=javascript_include_tag 'gene-categories-view-model'
